@model FreieWahl.Models.VotingAdministration.QuestionModel

<div class="card my-4">
<div class="card-header bg-primary text-light pb-0 pt-1" style="font-size:2.5rem; font-weight: 100;line-height: 2.5rem"><div class="pt-2 float-left">Reihungsfrage</div>
        <div class="btn-group dropleft float-right">
            <a class="nav-link" href="#" id="question-@Model.Index-menu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="material-icons text-white" style="font-size:2.5rem">more_vert</i>
            </a>
            <div class="dropdown-menu" aria-labelledby="question-@Model.Index-menu">
                <button class="dropdown-item" type="button" onclick='editQuestion(@Json.Serialize(Model))'>Bearbeiten</button>
                <button class="dropdown-item" type="button" onclick="deleteQuestion('@Model.VotingId', @Model.Index)">Frage löschen</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <h1 class="card-title" style="border-bottom: 1px solid #657F8C"  id="question-@Model.Index-title">@Model.Text</h1>
        <p class="card-text border-bottom"  id="question-@Model.Index-description">@Model.Description</p>
        <div class="container">
            <div class="row" id="question-@Model.Index-answers">
                <div class="col-lg-6 col-12">
                    @{ int answerCount = 0; }
                    @foreach (var answer in Model.AnswerOptions)
                    {
                        <div class="my-2 border w-100 fw-answer-title">
                            <span id="fw-answer-title-@Model.Index-@answerCount">
                                @answer.Answer
                            </span>
                            @if (!string.IsNullOrEmpty(answer.Description))
                            {
                                <br /><span class="small text-primary fw-answer-description" id="fw-answer-description-@Model.Index-@answerCount">@answer.Description</span>
                            }
                        </div>
                        answerCount++;
                    }
                </div>
                <div class="col-lg-6 col-12">
                    @for (int i = 0; i < Model.MinNumAnswers; i++)
                    {
                        <div class="my-2 p-2 border w-100 bg-dark text-light">@(i + 1)</div>
                    }
                    @for (int j = Model.MinNumAnswers; j < Model.MaxNumAnswers; j++)
                    {
                        <div class="my-2 p-2 border w-100 text-white" style="background-color: gray">@(j + 1)</div>
                    }
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-success float-right mx-3">Für Wahl freischalten</a>
    </div>
</div>