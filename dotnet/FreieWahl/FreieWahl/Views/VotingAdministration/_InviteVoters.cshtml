@using System.Reflection

<div class="modal fade" id="inviteVotersModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">WählerInnen einladen</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <p>
                        <small>
                            Sie können Wahlberechtigte per Mail einladen. Geben Sie hier den Text der Mail ein, unten können Sie die EmpfängerInnen der Mail anführen.
                            Verwenden Sie den Platzhalter <strong>%link%</strong> für den Registrierungslink. Die Mailadressen können Sie durch Zeilenumbrüche oder Strichpunkte getrennt eingeben.
                        </small>
                    </p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="mailSubjectLabel">Betreff</span>
                        </div>
                        <input type="text" class="form-control" value="Einladung zur Wahl" aria-label="Einladung zur Wahl" aria-describedby="mailSubjectLabel" id="mailSubject">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Mailtext</span>
                        </div>
                        <textarea class="form-control" aria-label="Mailtext" rows="5" id="mailText">Liebe Wahlberechtigte!
Ihr seid eingeladen, an unserer Abstimmung @ViewData["Title"] teilzunehmen. Bitte registriert euch unter %link%.
Vielen Dank!</textarea>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">EmpfängerInnen</span>
                        </div>
                        <textarea class="form-control" aria-label="EmpfängerInnen" rows="10" placeholder="mail@provider.com" id="mailRecipients"></textarea>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Abbrechen</button>
                <button type="button" class="btn btn-primary" onclick="sendInvitations('@ViewData["VotingId"]');">OK</button>
            </div>
        </div>
    </div>
</div>