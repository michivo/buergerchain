@using FreieWahl.Models.VotingAdministration
@model FreieWahl.Models.VotingAdministration.VotingOverviewModel

@{
    ViewData["Title"] = Model.Title;
}

<h2>My Votings</h2>

<ul class="freiewahl-voting-overview mdl-list">
    @{
        foreach (var voting in Model.Votings)
        {
            <li class="mdl-list__item mdl-list__item--three-line">
                <span class="mdl-list__item-primary-content">
                    <i class="material-icons mdl-list__item-avatar">check_circle</i>
                    <span>@voting.Title</span>
                    <span class="mdl-list__item-text-body">
                        @voting.Description
                    </span>
                </span>
                <span class="mdl-list__item-secondary-content">
                    <a class="mdl-list__item-secondary-action" href="@Url.Action("Edit", "VotingAdministration", new { id = voting.Id })"><i class="material-icons">mode_edit</i></a>
                </span>
            </li>
        }
    }
</ul>