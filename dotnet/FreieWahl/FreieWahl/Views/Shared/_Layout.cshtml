<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreieWahl</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/freiewahl.css" asp-append-version="true" />

        <script src="~/lib/jquery/dist/jquery.js"></script>

        <script src="~/lib/firebase/firebase.js"></script>
        <script src="~/lib/firebase/firebase-auth.js"></script>
        <script src="~/lib/firebase/firebase-firestore.js"></script>
        <script src="~/lib/firebaseui/dist/firebaseui.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <link type="text/css" rel="stylesheet" href="~/lib/firebaseui/dist/firebaseui.css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,400i,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.standalone.min.css">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/freiewahl.css" asp-append-version="true" />

        <script src="~/lib/jquery/dist/jquery.js"></script>

        <script src="~/lib/firebase/firebase.js"></script>
        <script src="~/lib/firebase/firebase-auth.js"></script>
        <script src="~/lib/firebase/firebase-firestore.js"></script>
        <script src="~/lib/firebaseui/dist/firebaseui.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <link type="text/css" rel="stylesheet" href="~/lib/firebaseui/dist/firebaseui.css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,400i,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.standalone.min.css">

    </environment>

    <script>
        window.addEventListener('load', initApp);
    </script>
</head>
<body>

            @RenderBody()
    <footer>
        <p>&copy; 2018 - FreieWahl</p>
    </footer>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">

        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
